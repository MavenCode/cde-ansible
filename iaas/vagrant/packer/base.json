{
  "variables": {
    "ACCESS_KEY": "",
    "SECRET_KEY": "",
    "HOME": "/Users/morpheus"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `ACCESS_KEY`}}",
      "secret_key": "{{user `SECRET_KEY`}}",
      "region": "us-west-1",
      "instance_type": "m1.medium",
      "ssh_username": "ubuntu",
      "ami_name": "base {{isotime | clean_ami_name}}",
      "source_ami": "ami-b085eed0"
    },
    {
      "type": "virtualbox-ovf",
      "source_path": "{{user `HOME`}}/.vagrant.d/boxes/ubuntu-VAGRANTSLASH-trusty64/20160318.0.0/virtualbox/box.ovf",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "headless": true,
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "base.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false,
        "compression_level": 9,
        "output": "packer_{{.BuildName}}_{{.Provider}}_base.box"
      }
    ]
  ]
}
